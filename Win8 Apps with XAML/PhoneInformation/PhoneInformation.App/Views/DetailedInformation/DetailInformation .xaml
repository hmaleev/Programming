<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="PhoneInformation.App.Views.DetailedInformation.DetailInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhoneInformation.App.Views.DetailedInformation"
    xmlns:common="using:PhoneInformation.App.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="using:PhoneInformation.App.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>

        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">Detailed Information</x:String>
    </Page.Resources>
    <Page.DataContext>
        <viewModel:DetailedPhoneInformationViewModel/>
    </Page.DataContext>

    <!--
        This grid acts as a root panel for the page that defines two rows:
        * Row 0 contains the back button and page title
        * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Name="Link" Visibility="Visible" Text="{Binding Path=URL2, Mode=TwoWay}"/>

            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="{StaticResource AppName}" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>

        <StackPanel Grid.Row="1" >
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollMode="Auto" 
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollMode="Disabled">
                        <StackPanel  Grid.Row="0" Orientation="Horizontal" >



                            <StackPanel Margin="20 0 0 0">
                                <TextBlock Text="General"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onGeneralTap"></TextBlock>
                                <StackPanel Name="GeneralInfo" Visibility="Visible">
                                    <TextBlock Text="{Binding DetailedInfo[0].SecondGenNetwork}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   Grid.Column="2"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].ThirdGenNetwork}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].FourthGenNetwork}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Sim}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Announced}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Status}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0" Grid.Row="1" Grid.Column="0">
                                <TextBlock Text="Body"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onBodyTap" ></TextBlock>
                                <StackPanel Name="BodyInfo" Visibility="Collapsed"  Grid.Row="1" Grid.Column="1">
                                    <TextBlock Text="{Binding DetailedInfo[0].Dimensions}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Weight}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0" Grid.Row="2">
                                <TextBlock Text="Display"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onDisplayTap" ></TextBlock>
                                <StackPanel Margin="10 0 0 0" Name="DisplayInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].DisplayType}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock  Text="{Binding DetailedInfo[0].Size}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Multitouch}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Protection}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0" Grid.Row="3">
                                <TextBlock Text="Sound"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onSoundTap" ></TextBlock>
                                <StackPanel Name="SoundInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].AlertTypes}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Loudspeaker}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].AudioJack}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].OtherSoundFeatures}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="20 0 0 0" Grid.Row="4">
                                <TextBlock Text="Memory"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onMemoryTap"></TextBlock>
                                <StackPanel Name="MemoryInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].CardSlot}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Internal}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0" Grid.Row="5">
                                <TextBlock Text="Data"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onDataTap" ></TextBlock>
                                <StackPanel Name="DataInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].GPRS}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].EDGE}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Speed}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].WLan}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Bluetooth}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].USB}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].NFC}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0" Grid.Row="6">
                                <TextBlock Text="Camera"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onCameraTap" ></TextBlock>
                                <StackPanel Name="CameraInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].Primary}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Secondary}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Video}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].CameraFeatures}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="20 0 0 0"  Grid.Row="7">
                                <TextBlock Text="Features"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onFeaturesTap" ></TextBlock>
                                <StackPanel Name="FeaturesInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].OS}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Chipset}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].CPU}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].GPU}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Sensors}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Messaging}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Browser}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Radio}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].GPS}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Java}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Colors}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].OTherFeatures}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>

                            <StackPanel Margin="20 0 0 0" Grid.Row="8">
                                <TextBlock Text="Battery"
                                  FontSize="42"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap" Tapped="onSoundTap" ></TextBlock>
                                <StackPanel Name="batteryInfo" Visibility="Collapsed">
                                    <TextBlock Text="{Binding DetailedInfo[0].AlertTypes}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].Loudspeaker}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].AudioJack}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding DetailedInfo[0].OtherSoundFeatures}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>


                    </ScrollViewer>


                </Grid>
            </StackPanel>

        </StackPanel>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>




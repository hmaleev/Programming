<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="PhoneInformation.App.Views.DetailedInformation.DetailInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhoneInformation.App.Views.DetailedInformation"
    xmlns:common="using:PhoneInformation.App.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="using:PhoneInformation.App.ViewModels"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <viewModel:DetailedPhoneInformationViewModel/>
    </Page.DataContext>
    <Page.BottomAppBar>
        <AppBar x:Name="bottomAppBar" Padding="10,0,10,0">
            <Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource SaveAppBarButtonStyle}" Click="OnSaveButtonClick"/>
                    <Button Style="{StaticResource DocumentAppBarButtonStyle}" Click="OnPrintButtonClick"/>

                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <!--
    This grid acts as a root panel for the page that defines two rows:
    * Row 0 contains the back button and page title
    * Row 1 contains the rest of the page layout
    -->
    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back button and page title -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>


            <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Detailed Information" Style="{StaticResource PageHeaderTextStyle}"/>
        </Grid>
        <!-- START DATA -->
        <Canvas x:Name="PrintContainer" Margin="-3000" Opacity="0"/>

        <ScrollViewer x:Name="scrollViewer" HorizontalScrollMode="Auto" 
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollMode="Disabled"
                      VerticalScrollBarVisibility="Hidden"
                      Grid.Row="1">
            <StackPanel x:Name="stackPanel" >

                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0" 
                        Grid.Column="0"
                        Text="Phone" 
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap"/>
                    <StackPanel 
                        Grid.Row="1"
                        Grid.Column="0" 
                        Name="FirstPhoneInfo" 
                        Margin="5" 
                        Width="300" 
                        Visibility="Visible">

                        <TextBlock Grid.Row="0"
                            Text="{Binding DetailedInfo[0].PhoneName}"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Name="PhoneName"/>
                        <Image Source="{Binding DetailedInfo[0].ImageUrl}"
                               MaxHeight="300"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Stretch"/>

                    </StackPanel>

                    <TextBlock
                        Grid.Row="0" 
                        Grid.Column="1"
                        Text="General" 
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap"/>
                    <Grid Grid.Row="1" 
                        Grid.Column="1"
                        Visibility="Collapsed"
                        Name="GeneralInfo"
                        Background="#87CEEB"
                        Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel 
                            Grid.Row="0"
                            Grid.Column="0" 
                            Visibility="Visible"
                            Margin="5">
                            <TextBlock Text="2G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                      />
                            <TextBlock Text="3G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                    />
                            <TextBlock Text="4G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                 />
                            <TextBlock Text="Sim Card Size:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                 />
                            <TextBlock Text="Announced"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                     />
                            <TextBlock Text="Status"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                      />
                        </StackPanel>
                        <StackPanel 
                            Grid.Row="0"
                            Grid.Column="1" 
                            Margin="5"
                            Visibility="Visible">

                            <TextBlock Text="{Binding DetailedInfo[0].SecondGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                        Name="SecondGenNetwork"/>
                            <TextBlock Text="{Binding DetailedInfo[0].ThirdGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="ThirdGenNetwork"/>
                            <TextBlock Text="{Binding DetailedInfo[0].FourthGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                        Name="FourthGenNetwork"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Sim}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                         Name="Sim"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Announced}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                         Name="Announced"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Status}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                        Name="Status" />
                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        Text="Body" 
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1" 
                          Grid.Column="2"
                          Visibility="Collapsed"
                          Name="BodyInfo"
                          Background="#87CEEB"
                          Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="5">

                            <TextBlock Text="Dimensions: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Weight: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5">

                            <TextBlock Text="{Binding DetailedInfo[0].Dimensions}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="Dimensions"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Weight}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="Weight"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="3"
                        Text="Display"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1"
                        Grid.Column="3"
                        Name="DisplayInfo"
                        Visibility="Collapsed"
                        Background="#87CEEB"
                        Margin="5">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="5">
                            <TextBlock Text="Display Type: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                       />
                            <TextBlock  Text="Size: "
                                    FontSize="20"
                                    FontWeight="Bold"
                                    TextWrapping="Wrap"
                                        />
                            <TextBlock Text="Multitouch: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                       
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Protection: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"
                                      />

                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5">
                            <TextBlock Text="{Binding DetailedInfo[0].DisplayType}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="DisplayType"/>
                            <TextBlock  Text="{Binding DetailedInfo[0].Size}"
                                    FontSize="20"
                                    TextWrapping="Wrap"
                                        Name="Size"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Multitouch}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="Multitouch"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Protection}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                        Name="Protection"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Text="Sound"
                        Grid.Row="0"
                        Grid.Column="4"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap"/>
                    <Grid Grid.Row="1"
                        Grid.Column="4"
                        Name="SoundInfo"
                        Background="#87CEEB"
                        Visibility="Collapsed"
                        Margin="5">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"

                        Margin="5">
                            <TextBlock Text="Alert Types: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Loudspeaker: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="3.5mm Audio Jack: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Other Sound Features: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                        <StackPanel Grid.Column="1"

                        Margin="5">
                            <TextBlock Text="{Binding DetailedInfo[0].AlertTypes}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="AlertTypes"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Loudspeaker}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="Loudspeaker"/>
                            <TextBlock Text="{Binding DetailedInfo[0].AudioJack}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="AudioJack"/>
                            <TextBlock Text="{Binding DetailedInfo[0].OtherSoundFeatures}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="OtherSoundFeatures"/>

                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Text="Memory"
                        Grid.Row="0"
                        Grid.Column="5"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}" 
                        Tapped="OnTap"/>
                    <Grid Grid.Row="1"
                          Background="#87CEEB"
                          Grid.Column="5"
                          Name="MemoryInfo"
                          Margin="5"
                          Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="5">
                            <TextBlock Text="Card Slot:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Internal Memory: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5">
                            <TextBlock Text="{Binding DetailedInfo[0].CardSlot}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                       Name="CardSlot"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Internal}"
                                   FontSize="20"
                                   TextWrapping="Wrap"
                                      Name="Internal"/>
                        </StackPanel>

                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="6"
                        Text="Data"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1" 
                        Grid.Column="6"
                        Background="#87CEEB"
                        Name="DataInfo"
                        Margin="5"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="5" Grid.Column="0">

                            <TextBlock Text="GPRS: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="EDGE: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Speed: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Wi-Fi: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Bluetooth: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="USB: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="NFC: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5">
                            <TextBlock Text="{Binding DetailedInfo[0].GPRS}"
                                       Name="GPRS"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].EDGE}"
                                       Name="EDGE"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Speed}"
                                       Name="Speed"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].WLan}"
                                       Name="WiFi"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Bluetooth}"
                                       Name="Bluetooth"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].USB}"
                                       Name="USB"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].NFC}"
                                       Name="NFC"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Text="Camera"
                        Grid.Row="0"
                        Grid.Column="7"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1"
                        Grid.Column="7"
                        Name="CameraInfo"
                        Background="#87CEEB"
                        Margin="5"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="5" >
                            <TextBlock Text="Primary camera:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Secondary camera:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Video"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Camera Features: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5" >
                            <TextBlock Text="{Binding DetailedInfo[0].Primary}"
                                       Name="PrimaryCamera"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Secondary}"
                                       Name="SecondaryCamera"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Video}"
                                       Name="Video"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].CameraFeatures}"
                                       Name="CameraFeatures"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="8"
                        Text="Features"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1"
                        Grid.Column="8"
                        Name="FeaturesInfo"
                        Background="#87CEEB"
                        Margin="5"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="5" Grid.Column="0">
                            <TextBlock Text="Operating System:"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Chipset: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="CPU: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="GPU: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Sensors: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Messaging: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Browser: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Radio: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="GPS: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Java: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Colors: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Other Features: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                        <StackPanel Margin="5" Grid.Column="1">
                            <TextBlock Text="{Binding DetailedInfo[0].OS}"
                                       Name="OS"                                       
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Chipset}"
                                       Name="Chipset"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].CPU}"
                                       Name="CPU"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].GPU}"
                                       Name="GPU"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Sensors}"
                                       Name="Sensors"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Messaging}"
                                       Name="Messaging"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Browser}"
                                       Name="Browser"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Radio}"
                                       Name="Radio"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].GPS}"
                                       Name="GPS"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Java}"
                                       Name="Java"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].Colors}"
                                       Name="Colors"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].OtherFeatures}"
                                       Name="OtherFeatures"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="9"
                        Text="Battery"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyle}"
                        Tapped="OnTap" />
                    <Grid Grid.Row="1"
                        Grid.Column="9"
                        Name="BatteryInfo"
                        Background="#87CEEB"
                        Margin="5"
                        Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel  Grid.Column="0"
                        Margin="5">
                            <TextBlock Text="Battery Type: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Standby Time: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Talk Time: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="Music Play Time: "
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                        <StackPanel  Grid.Column="1"  Margin="5">
                            <TextBlock Text="{Binding DetailedInfo[0].BatteryType}"
                                       Name="BatteryType"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].StandbyTime}"
                                       Name="StandbyTime"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].TalkTime}"
                                       Name="TalkTime"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding DetailedInfo[0].MusicPlayTime}"
                                       Name="MusicPlayTime"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>

                        </StackPanel>
                    </Grid>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer x:Name="scrollViewer1" HorizontalScrollMode="Disabled" 
                      VerticalScrollMode="Auto"
                      VerticalScrollBarVisibility="Visible"
                      Grid.Row="1">
            <StackPanel >

                <Grid >
                    <Grid.RowDefinitions >

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        
                        

                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0" 
                        Text="General" 
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyleSnapped}"
                        Tapped="OnTap" />
                    <StackPanel 
                        Grid.Row="1"
                        Name="GeneralInfoSnapped" 
                        Margin="5" 
                        Width="300" 
                        Background="#87CEEB"
                        Visibility="Collapsed">

                        <TextBlock Text="2G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].SecondGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="3G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].ThirdGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="4G Network"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].FourthGenNetwork}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Sim"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].Sim}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Announced"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].Announced}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Status"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].Status}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <TextBlock
                        Grid.Row="2"
                        Text="Body"
                        Style="{StaticResource ResourceKey=TextBlockHeaderStyleSnapped}"
                        Tapped="OnTap"/>
                    <StackPanel
                        Grid.Row="3"
                        Name="BodyInfoSnapped"
                        Width="300"
                        Margin="5"
                        Background="#87CEEB"
                        Visibility="Collapsed">

                        <TextBlock Text="Dimensions"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding DetailedInfo[0].Dimensions}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Weight"

                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                </InlineUIContainer>
            </Paragraph>
            <Paragraph>
                <Run Text="USB:" FontWeight="Bold"></Run>
                <InlineUIContainer>
                    <TextBlock Text="{Binding DetailedInfo[0].USB}"
                                   FontSize="20"

                    <TextBlock Text="{Binding DetailedInfo[0].Speed}"
                                   FontSize="20"
                                   TextWrapping="Wrap"/>
                </InlineUIContainer>
            </Paragraph>
            <Paragraph>
                <Run Text="Wi-Fi:" FontWeight="Bold"></Run>
                <InlineUIContainer>
